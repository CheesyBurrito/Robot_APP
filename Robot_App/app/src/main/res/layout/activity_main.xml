<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:text="Jouer" />

    <Button
        android:id="@+id/answerA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playButton"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="47dp"
        android:layout_toStartOf="@+id/playButton"
        android:onClick="onClick"
        android:text="Button" />

    <Button
        android:id="@+id/answerB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/answerA"
        android:layout_alignBottom="@+id/answerA"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:onClick="onClick"
        android:text="Button" />

    <Button
        android:id="@+id/answerC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/answerA"
        android:layout_marginBottom="30dp"
        android:onClick="onClick"
        android:text="Button" />

    <Button
        android:id="@+id/answerD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/answerB"
        android:layout_alignTop="@+id/answerC"
        android:onClick="onClick"
        android:text="Button" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:fontFamily="sans-serif"
        android:text="Choisissez votre diificultÃ©"
        android:textSize="18sp" />

    <Button
        android:id="@+id/difficultySelectionEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playButton"
        android:layout_below="@+id/questionText"
        android:layout_marginTop="36dp"
        android:onClick="onClick"
        android:text="Facile" />

    <Button
        android:id="@+id/difficultySelectionMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/difficultySelectionEasy"
        android:layout_below="@+id/difficultySelectionEasy"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:text="Moyen" />

    <Button
        android:id="@+id/difficultySelectionHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playButton"
        android:layout_below="@+id/difficultySelectionMedium"
        android:layout_marginTop="12dp"
        android:onClick="onClick"
        android:text="Difficile" />

    <TextView
        android:id="@+id/countdownTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/difficultySelectionEasy"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:visibility="gone" />
</RelativeLayout>
